<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>

<GridPane alignment="center" hgap="10" prefHeight="548.0" prefWidth="702.0" vgap="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.CalendarTabController">
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
    <children>
        <BorderPane prefHeight="600.0" prefWidth="818.0">
            <top>
                <GridPane fx:id="editAreaTop" BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <DatePicker fx:id="datePicker" prefHeight="25.0" prefWidth="186.0" GridPane.rowIndex="1">
                            <GridPane.margin>
                                <Insets />
                            </GridPane.margin>
                        </DatePicker>
                        <Label fx:id="dateLabel" text="Date Displays Here" textAlignment="CENTER">
                            <GridPane.margin>
                                <Insets />
                            </GridPane.margin>
                            <font>
                                <Font size="18.0" />
                            </font>
                        </Label>
                        <Button fx:id="updateBtn" mnemonicParsing="false" onAction="#updater" text="Update" GridPane.rowIndex="2">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <GridPane.margin>
                                <Insets />
                            </GridPane.margin>
                        </Button>
                        <Button fx:id="saveBtn" mnemonicParsing="false" onAction="#saveMonth" text="Save" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
            </top>
            <center>
                <TableView fx:id="table" prefHeight="458.0" prefWidth="659.0" BorderPane.alignment="CENTER">
                    <columns>
                        <TableColumn fx:id="sunColumn" minWidth="100.0" prefWidth="75.0" text="Sunday" />
                        <TableColumn fx:id="monColumn" minWidth="100.0" prefWidth="75.0" text="Monday" />
                        <TableColumn fx:id="tuesColumn" minWidth="100.0" prefWidth="75.0" text="Tuesday" />
                        <TableColumn fx:id="wedColumn" minWidth="100.0" prefWidth="75.0" text="Wednesday" />
                        <TableColumn fx:id="thursColumn" minWidth="100.0" prefWidth="75.0" text="Thursday" />
                        <TableColumn fx:id="friColumn" minWidth="100.0" prefWidth="75.0" text="Friday" />
                        <TableColumn fx:id="satColumn" minWidth="100.0" prefWidth="75.0" text="Saturday" />
                    </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
               <BorderPane.margin>
                  <Insets left="10.0" right="10.0" />
               </BorderPane.margin>
                </TableView>
            </center>
        </BorderPane>
    </children>
</GridPane>
